# Production Environment Variables for Vssyl
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Cloud SQL PostgreSQL connection string
# Format: postgresql://username:password@/database_name?host=/cloudsql/project:region:instance
DATABASE_URL=postgresql://vssyl_user:your_password@/vssyl_production?host=/cloudsql/vssyl-472202:us-central1:vssyl-db
DIRECT_URL=postgresql://vssyl_user:your_password@/vssyl_production?host=/cloudsql/vssyl-472202:us-central1:vssyl-db

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-here
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL (Cloud Run service URL)
BACKEND_URL=https://vssyl-server-xxxxx-uc.a.run.app
NEXT_PUBLIC_API_URL=https://vssyl-server-xxxxx-uc.a.run.app
NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Choose one email service provider:

# Option 1: Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
EMAIL_FROM=notifications@your-domain.com

# Option 2: SendGrid (recommended for production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_SECURE=false
# EMAIL_FROM=notifications@your-domain.com

# Option 3: Google Workspace
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-workspace-email@your-domain.com
# SMTP_PASS=your-app-password
# SMTP_SECURE=false
# EMAIL_FROM=notifications@your-domain.com

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# Generate VAPID keys using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# FILE STORAGE
# =============================================================================
# Google Cloud Storage configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=vssyl-uploads
FILE_STORAGE_TYPE=cloud-storage

# =============================================================================
# REDIS CACHING (Optional)
# =============================================================================
# Redis URL for caching (if using Cloud Memorystore)
# REDIS_URL=redis://10.x.x.x:6379

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_URL=wss://vssyl-server-xxxxx-uc.a.run.app
NEXT_PUBLIC_WEBSOCKET_URL=wss://vssyl-server-xxxxx-uc.a.run.app

# =============================================================================
# AI PROVIDERS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Google Cloud Logging
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json

# =============================================================================
# SECURITY
# =============================================================================
# CORS configuration
CORS_ORIGIN=https://your-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_CHAT=true
